@startuml Use_Cases

title Diagramme de cas d'utilisation - Plateforme de Gestion de Projets

left to right direction

' Acteurs
:Administrateur: as Admin
:Gestionnaire: as Manager
:Employé: as Employee

rectangle "Système de Gestion de Projets" {

    ' Cas d'utilisation - Gestion des utilisateurs
    package "Gestion des Utilisateurs" {
        usecase "Créer utilisateur" as UC1
        usecase "Modifier utilisateur" as UC2
        usecase "Supprimer utilisateur" as UC3
        usecase "Gérer rôles et permissions" as UC4
        usecase "Activer/Désactiver utilisateur" as UC5
    }

    ' Cas d'utilisation - Authentification
    package "Authentification et Sécurité" {
        usecase "Se connecter" as UC6
        usecase "Se déconnecter" as UC7
        usecase "Changer mot de passe" as UC8
    }

    ' Cas d'utilisation - Gestion des projets
    package "Gestion des Projets" {
        usecase "Créer projet" as UC9
        usecase "Modifier projet" as UC10
        usecase "Supprimer projet" as UC11
        usecase "Consulter projets" as UC12
        usecase "Dupliquer projet" as UC13
        usecase "Créer template" as UC14
        usecase "Créer depuis template" as UC15
        usecase "Visualiser avancement" as UC16
        usecase "Consulter écarts temps" as UC17
    }

    ' Cas d'utilisation - Gestion des tâches
    package "Gestion des Tâches" {
        usecase "Créer tâche" as UC18
        usecase "Créer sous-tâche" as UC19
        usecase "Modifier tâche" as UC20
        usecase "Supprimer tâche" as UC21
        usecase "Changer statut tâche" as UC22
        usecase "Clôturer tâche" as UC23
        usecase "Assigner ressource" as UC24
        usecase "Consulter backlog" as UC25
    }

    ' Cas d'utilisation - Gestion du temps
    package "Gestion du Temps" {
        usecase "Saisir temps" as UC26
        usecase "Modifier saisie temps" as UC27
        usecase "Supprimer saisie temps" as UC28
        usecase "Valider feuille temps" as UC29
        usecase "Approuver feuille temps" as UC30
        usecase "Consulter feuille temps" as UC31
    }

    ' Cas d'utilisation - Visualisation et rapports
    package "Visualisation et Rapports" {
        usecase "Générer diagramme Gantt" as UC32
        usecase "Consulter tableau de bord" as UC33
        usecase "Générer rapport temps projet" as UC34
        usecase "Générer rapport temps employé" as UC35
        usecase "Consulter KPIs" as UC36
    }

    ' Cas d'utilisation - Gestion des ressources
    package "Gestion des Ressources" {
        usecase "Créer ressource" as UC37
        usecase "Modifier ressource" as UC38
        usecase "Supprimer ressource" as UC39
        usecase "Consulter ressources" as UC40
    }
}

